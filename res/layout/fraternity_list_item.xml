<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical" >
		
        	
       <TextView
           android:id="@+id/fraternity_letters"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="20sp"
           android:text="AAA"/> 
        
        <TextView
            android:id="@+id/fraternity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fraternity_list_item_metadata_margin_small"
            android:textSize="18sp"
            android:text="AAA" />

        <TextView
            android:id="@+id/fraternity_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fraternity_list_item_metadata_margin_small"
            android:maxLines="1"
            android:textSize="12sp" 
            android:text="AAA akldf klasd lkj alskdjf klasjdkl fjksldjf klajdlk jasldfj;sakdj fkasldf klja"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
         android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>